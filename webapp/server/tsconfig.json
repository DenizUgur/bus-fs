{
	"compilerOptions": {
		"target": "ESNext",
		"module": "Node16",
		"lib": ["dom", "ESNext"],
		"allowJs": true,
		"outDir": "build",
		"rootDir": "src",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
		"inlineSources": true
	},
	"exclude": ["**/*.jsx"]
}
